<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eecs.peacemeal.SelectionActivity"
    android:background="#163763">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:id="@+id/completeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#3F69DC"
        android:textColor="#F2F2F2"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/meatText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Meat"
        android:id="@+id/meatText"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="25dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Unselect All Meat"
        android:id="@+id/meatUnselectAll"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/meatText"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Diary"
        android:id="@+id/diaryText"
        android:layout_below="@+id/listView"
        android:textColor="#ffffff"
        android:textSize="25dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Unselect All Diary"
        android:id="@+id/diaryUnselectAll"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/diaryText"
        android:background="@android:color/transparent"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/diaryText" />
</RelativeLayout>
